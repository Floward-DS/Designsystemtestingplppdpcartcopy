{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "typography": {
    "font": {
      "family": {
        "montas": {
          "$type": "fontFamily",
          "$value": "Montas, serif",
          "$description": "Primary display font for headings and emphasis."
        },
        "founders": {
          "$type": "fontFamily",
          "$value": "Founders Grotesk, sans-serif",
          "$description": "Primary body font for text and UI elements."
        }
      },
      "weight": {
        "light": {
          "$type": "fontWeight",
          "$value": 300
        },
        "normal": {
          "$type": "fontWeight",
          "$value": 400
        },
        "medium": {
          "$type": "fontWeight",
          "$value": 500
        },
        "semibold": {
          "$type": "fontWeight",
          "$value": 600
        }
      },
      "size": {
        "base": {
          "$type": "fontSize",
          "$value": "16px",
          "$description": "Base font size for body text."
        },
        "h1": {
          "$type": "fontSize",
          "$value": "72px",
          "$description": "Font size for primary headings."
        },
        "h2": {
          "$type": "fontSize",
          "$value": "38px",
          "$description": "Font size for secondary headings."
        },
        "h3": {
          "$type": "fontSize",
          "$value": "32px",
          "$description": "Font size for tertiary headings."
        },
        "h4": {
          "$type": "fontSize",
          "$value": "22px",
          "$description": "Font size for quaternary headings."
        },
        "label": {
          "$type": "fontSize",
          "$value": "14px",
          "$description": "Font size for labels and form elements."
        },
        "small": {
          "$type": "fontSize",
          "$value": "12px",
          "$description": "Font size for small text and captions."
        },
        "price": {
          "$type": "fontSize",
          "$value": "18px",
          "$description": "Font size for price displays."
        }
      },
      "lineHeight": {
        "tight": {
          "$type": "number",
          "$value": 1.2
        },
        "snug": {
          "$type": "number",
          "$value": 1.3
        },
        "normal": {
          "$type": "number",
          "$value": 1.4
        },
        "relaxed": {
          "$type": "number",
          "$value": 1.5
        },
        "loose": {
          "$type": "number",
          "$value": 1.6
        }
      }
    },
    "text": {
      "h1": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.font.family.montas}"
        },
        "fontSize": {
          "$type": "fontSize",
          "$value": "{typography.font.size.h1}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.font.weight.normal}"
        },
        "lineHeight": {
          "$type": "number",
          "$value": "{typography.font.lineHeight.tight}"
        }
      },
      "h2": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.font.family.montas}"
        },
        "fontSize": {
          "$type": "fontSize",
          "$value": "{typography.font.size.h2}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.font.weight.normal}"
        },
        "lineHeight": {
          "$type": "number",
          "$value": "{typography.font.lineHeight.snug}"
        }
      },
      "h3": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.font.family.montas}"
        },
        "fontSize": {
          "$type": "fontSize",
          "$value": "{typography.font.size.h3}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.font.weight.normal}"
        },
        "lineHeight": {
          "$type": "number",
          "$value": "{typography.font.lineHeight.snug}"
        }
      },
      "h4": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.font.family.founders}"
        },
        "fontSize": {
          "$type": "fontSize",
          "$value": "{typography.font.size.h4}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.font.weight.light}"
        },
        "lineHeight": {
          "$type": "number",
          "$value": "{typography.font.lineHeight.normal}"
        }
      },
      "body": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.font.family.founders}"
        },
        "fontSize": {
          "$type": "fontSize",
          "$value": "{typography.font.size.base}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.font.weight.normal}"
        },
        "lineHeight": {
          "$type": "number",
          "$value": "{typography.font.lineHeight.relaxed}"
        }
      },
      "label": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.font.family.founders}"
        },
        "fontSize": {
          "$type": "fontSize",
          "$value": "{typography.font.size.label}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.font.weight.normal}"
        },
        "lineHeight": {
          "$type": "number",
          "$value": "{typography.font.lineHeight.normal}"
        }
      },
      "small": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.font.family.founders}"
        },
        "fontSize": {
          "$type": "fontSize",
          "$value": "{typography.font.size.small}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.font.weight.normal}"
        },
        "lineHeight": {
          "$type": "number",
          "$value": "{typography.font.lineHeight.normal}"
        }
      },
      "price": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.font.family.founders}"
        },
        "fontSize": {
          "$type": "fontSize",
          "$value": "{typography.font.size.price}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.font.weight.semibold}"
        },
        "lineHeight": {
          "$type": "number",
          "$value": "{typography.font.lineHeight.snug}"
        }
      }
    }
  }
}
